% -*- mode: erlang -*-
{deps, [
    {ecache,                ".*", {git, "https://github.com/leo-project/ecache.git",      "0.9.2"}},
    {leo_s3_libs,           ".*", {git, "https://github.com/leo-project/leo_s3_libs.git", "0.6.1"}},
    {leo_commons,           ".*", {git, "https://github.com/leo-project/leo_commons.git", "0.9.3"}}
]}.
{erl_opts, [debug_info]}.
{cover_enabled, true}.
{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.
{template_dir, "support/templates/"}.
{dialyzer_opts, [{warnings, [no_return,
                             no_unused,
                             no_improper_lists,
                             no_fun_app,
                             no_match,
                             no_opaque,
                             no_fail_call,
                             error_handling,
                             race_conditions,
                             behaviours,
                             unmatched_returns]}]}.
